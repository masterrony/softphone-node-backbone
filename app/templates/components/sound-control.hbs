<div class="control-wrapper">
  <div class="icon-wrapper" >
    <div class="action" role="button" {{action "toggleMute"}}>
      {{#if isMuted}}
        {{svg-icon class="control-icon" icon=muted_name isMuted=isMuted }}
      {{else}}
        {{svg-icon class="control-icon" icon=icon_name isMuted=isMuted }}
      {{/if}}
    </div>
  </div>
  {{#if showSlider}}
    <div class="control-slider">
      <input type="range" value={{volume}} oninput={{action "setVolume" value="target.value"}} min="0" max="1" step="0.05" class="volume-range">
    </div>
  {{/if}}
</div>